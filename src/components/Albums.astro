---
import Card from './Card.astro'

const response = await fetch('https://music-api.charca.workers.dev/albums')
const { results: albums } = await response.json()
---

<div class='grid grid-cols-2 md:grid-cols-4 gap-4 max-w-5xl m-auto'>
  {
    albums.map(({ idAlbum, strAlbum, strAlbumThumb }) => (
      <Card idAlbum={`${idAlbum}`} strAlbum={strAlbum} strAlbumThumb={strAlbumThumb} />
    ))
  }
</div>
